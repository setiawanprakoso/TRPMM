<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".tampilanawal"
    android:background="#000000">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent_material_light"
        android:id="@+id/atas"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Music Tutorial"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/button_material_light"
        android:layout_below="@+id/atas">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/gitarbtn"
            android:layout_marginTop="49dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/gitar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gitar"
            android:layout_below="@+id/gitarbtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:id="@+id/editText"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bass"
            android:layout_below="@+id/gitarbtn"
            android:layout_alignEnd="@+id/drumbtn"
            android:layout_marginEnd="44dp"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piano"
            android:id="@+id/editText2"
            android:textSize="30dp"
            android:layout_below="@+id/pianobtn"
            android:layout_alignEnd="@+id/editText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/drumbtn"
            android:layout_marginRight="20dp"
            android:background="@drawable/bass"
            android:layout_alignBottom="@+id/gitarbtn"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pianobtn"
            android:text=""
            android:layout_marginTop="40dp"
            android:layout_below="@+id/gitarbtn"
            android:layout_alignParentStart="true"
            android:background="@drawable/piano"/>
        </RelativeLayout>



</RelativeLayout>
