    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="xxx.trpmmmen.piano2"
        android:background="#000000">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
        <VideoView
            android:id="@+id/myVideopian"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="275dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/txtTitlepian"
            android:layout_alignTop="@+id/myVideopian"
            android:layout_alignStart="@+id/myVideopian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:id="@+id/txtDownloadspian"
            android:layout_below="@+id/txtTitlepian"
            android:layout_alignStart="@+id/txtTitlepian" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sharepiano"
            android:text="Share"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/myVideopian" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playpiano"
        android:text="Play"
        android:layout_above="@+id/sharepiano"
        android:layout_toStartOf="@+id/pausepiano" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pausepiano"
        android:text="Pause"
        android:layout_alignTop="@+id/playpiano"
        android:layout_alignEnd="@+id/myVideopian"
        android:layout_marginEnd="79dp" />

</RelativeLayout>

    </RelativeLayout>
